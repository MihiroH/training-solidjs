{
  "plugins": [
    "stylelint-scss",
    "stylelint-prettier"
  ],
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recess-order",
    "stylelint-prettier/recommended",
    "stylelint-config-prettier"
  ],
  "ignoreFiles": [
    "**/node_modules/**"
  ],
  "rules": {
    "color-hex-length": "short",
    "length-zero-no-unit": true,
    "number-leading-zero": "always"
  }
}
